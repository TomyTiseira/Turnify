generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  phoneNum String
  isActive Boolean
  role_id  Int
  role     Role     @relation(fields: [role_id], references: [id])
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Role {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  User     User[]
}
